<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales App" Height="450" Width="800">
    <Grid>
        <Button Content="Список всех заказов" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,10,0,0" Click="GetAllOrders_Click"/>
        <Button Content="Самый популярный продукт (20-30 лет)" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,50,0,0" Click="GetPopularProduct_Click"/>
        <Button Content="Популярный возраст покупателей" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,90,0,0" Click="GetTopAgeGroup_Click"/>
        <Button Content="Товар с максимальной выручкой" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,130,0,0" Click="GetTopRevenueProduct_Click"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" VerticalAlignment="Top" Width="560" Height="250" Margin="220,10,0,0"/>
    </Grid>
</Window>